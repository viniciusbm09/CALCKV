#Organizando os layouts
Screen:
    CustomLayout1:
        CustomLayout2:
            
#Display 
<CustomLayout1@MDBoxLayout>:
    orientation: 'vertical'
    size: root.size
    
    MDLabel:
        id: display
        text: '0'
        multiline: False
        halign: 'right'
        font_style: 'H3'
        multiline: False
        theme_text_color: 'Custom'
        text_color: 39/255.0, 54/255.0, 245/255.0, 0.8
        height: 80
        size_hint: 1, None
        pos_hint: {"center_x": 0.5, "center_y": 0.9}
        
#Bot√µes
<CustomLayout2@MDGridLayout>:
    cols: 4
    rows: 5
    #Row 1
    MDRoundFlatButton:
        text: 'CE'
        font_size: '20'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        text_color: (39/255.0, 54/255.0, 245/255.0, 0.8)
        on_press: root.parent.clear_display()
    MDRoundFlatButton:
        text: '%'
        font_size: '20'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        text_color: (39/255.0, 54/255.0, 245/255.0, 0.8)
        on_press: root.parent.percent()
    MDRoundFlatButton:
        text: u'\u00AB'
        font_size: '20'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        text_color: (39/255.0, 54/255.0, 245/255.0, 0.8)
        on_press: root.parent.backspace()
    MDRoundFlatButton:
        text: u'\u00F7'
        font_size: '20'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        text_color: (39/255.0, 54/255.0, 245/255.0, 0.8)
        on_press: root.parent.buttom_operation('/')            
    #Row2
    MDRoundFlatButton:
        text: '7'
        font_size: '20'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        on_press: root.parent.buttom_number(self.text)
    MDRoundFlatButton:
        text: '8'
        font_size: '20'
